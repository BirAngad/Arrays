#include <iostream>
using namespace std;

void rowSum(int a[10][10], int r, int c) {
    for (int i = 0; i < r; i++) {
        int sum = 0;
        for (int j = 0; j < c; j++) {
            sum += a[i][j];
        }
        cout << "Sum of rows of entered matrix is " << i + 1 << " = " << sum << endl;
    }
}

void columsSum(int a[10][10], int r, int c) {
    for (int j = 0; j < c; j++) {
        int sum = 0;
        for (int i = 0; i < r; i++) {
            sum += a[i][j];
        }
        cout << "Sum of columns of entered matrix is" << j + 1 << " = " << sum << endl;
    }
}

int main() {
    int a[10][10], r, c;
    cout << "Enter rows and columns: ";
    cin >> r >> c;
    cout << "Enter matrix elements:" << endl;
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {
            cin >> a[i][j];
        }
    }
        cout<<"entered matrix:"<<endl;
    for(int i =0; i<r;i++){
        for(int j = 0;j<c;j++){
        cout<<a[i][j]<<" ";}
        cout<<endl;

    }

    rowSum(a, r, c);
    columnSum(a, r, c);
    return 0;
}
